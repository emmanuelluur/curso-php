{% extends 'baseLogin.twig' %}
{% block login %}
    <form class="form-signin" action="auth" method='post'>
        <img class="mb-4" src="../../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" id="inputEmail" class="form-control" name='mail' placeholder="Email address" required="required" autofocus="autofocus">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control" name='password' placeholder="Password" required="required">
        <div class='{{ cssClass }}'>
            {{ responseMessage }}
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

    </form>
{% endblock %}